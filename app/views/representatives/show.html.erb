  <div class="container">
    <div class="jumbotron text-center jumbotron-white">
      <div class="row">
        <div class="col-md-4">
          <h5>Representative Number:</h5>
          <h3><%= @representative.representative_number %></h3>
        </div>
        <div class="col-md-4">
