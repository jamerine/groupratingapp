        <%= @accounts.invalid_policy_number.count %>
      </div>
    </div>
    <br>
    <hr>
  </div>
  <div class="container">
    <div class="jumbotron text-center jumbotron-white">
      <div class="row">
        <h3>Export Data</h3>
      </div>
      <br>
      <div class="row">
        <div class="col-md-4">
          <h5>Accounts</h5>
           <%= link_to "Account Export", representative_export_accounts_path(params[:id], format: "csv"), class: 'btn btn-default' %>
        </div>
        <div class="col-md-4">
          <h5>Manual Classes</h5>
          <%= link_to "Manual Class Export", representative_export_manual_classes_path(params[:id], format: "csv"), class: 'btn btn-default'  %>
        </div>
        <div class="col-md-4">
          <h5>Weekly 159 Requests</h5>
          <%= link_to "159 Export", representative_export_159_request_weekly_path(params[:id], format: "csv"), class: 'btn btn-default' %>
        </div>

        </div>
      </div>
    </div>
    <div class="container">
      <hr>
      <div class="row text-center">
        <h3>Users</h3>
        <% if policy(@representative).users_management? %>
          <%= link_to "Add Users", representative_users_management_path(representative_id: @representative.id), class: 'btn btn-success btn-sm' %>
        <% end %>
      </div>
      <table class="table table-hover table-striped">
        <thead>
          <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Logins</th>
            <th>Last Login</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.order("id asc").each do |user| %>
            <tr>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><%= user.try(:role).try(:humanize) %></td>
              <td><%= user.sign_in_count %></td>
              <td><%= user.try(:last_sign_in_at).try(:strftime, "%-m/%-d/%y") %></td>
              <td><% if policy(@representative).users_management? %>
                  <%= link_to 'Remove', representatives_user_path(representative_id: @representative.id, user_id: user.id), method: :delete, class: 'btn btn-danger btn-sm' %>
                  <% end %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <hr>
    </div>
    <div class="container text-center">
      <div class="row">
        <h3>Import Data</h3>
      </div>
