    </tr>
    <tr>
      <td>Phmgn</td>
      <td><%= @phmgn_count %></td>
      <th></th>
    </tr>
    <tr>
      <td>Sc220</td>
      <td><%= @sc220_count %></td>
      <th></th>
    </tr>
    <tr>
      <td>Sc230</td>
      <td><%= @sc230_count %></td>
      <th></th>
    </tr>
  </table>
