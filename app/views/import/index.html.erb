<div class="container text-center">
  <div class="jumbotron">
    <h1>Import BWC Flat Files</h1>
    <div>
        <h3>Import all BWC files from Amazon S3</h3>
        <% if @democs.empty?  %>
            <%= link_to 'Import All BWC Files', import_index_path, method: :post,  class: 'btn btn-success' %>
        <% else %>
            <%= link_to 'Move onto Parsing Files', parse_index_path, class: 'btn btn-success' %>

        <% end %>
    </div>
  </div>
</div>


