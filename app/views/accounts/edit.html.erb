<div class="container">
  <div class="jumbotron text-center">
    <h1>Edit Account</h1>
    <div>
      <%= form_for @account do |f| %>
          <div class="form-group" >
            <%= f.label :representative %>
            <%= f.collection_select(:representative_id, @representatives, :id, :abbreviated_name, class: "form-control")%>
          </div>

          <div class="form-group" >
            <%= f.label :policy_number_entered %>
            <%= f.number_field :policy_number_entered, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :status %>
            <%= f.select :status, options_for_select(@statuses.collect { |s| [s[0].humanize, s[0]] }, selected: @account.status), {} , class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :street_address %>
            <%= f.text_field :street_address, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :street_address_2 %>
            <%= f.text_field :street_address_2, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :state %>
            <%= f.text_field :state, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :zip_code %>
            <%= f.text_field :zip_code, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :business_phone_number %>
            <%= f.phone_field :business_phone_number, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :business_email_address  %>
            <%= f.email_field :business_email_address, class: "form-control" %>
          </div>

          <div class="form-group" >
            <%= f.label :website_url  %>
            <%= f.url_field :website_url, class: "form-control" %>
          </div>

          <%= f.submit 'Update Account', class: 'btn btn-info' %>

      <% end %>

    </div>
    </div>

  </div>
