<div class="container">
  <%= render partial: "shared/account_navbar", locals: { object: @account } %>

  <%= link_to 'Back', :back, class: 'btn btn-primary' %>
  <div class="jumbotron text-center">
    <h1>Edit Account</h1>
    <div class="row">
      <%= form_for @account do |f| %>
          <div class="form-group col-md-12" >
            <%= f.label :representative %>
            <%= f.collection_select(:representative_id, @representatives, :id, :abbreviated_name, class: "form-control ")%>
          </div>

          <div class="form-group col-md-4  " >
            <%= f.label :name %>
            <%= f.text_field :name, class: "form-control" %>
          </div>

          <div class="form-group col-md-4" >
            <%= f.label 'Policy Number' %>
            <%= f.number_field :policy_number_entered, class: "form-control" %>
          </div>

          <div class="form-group col-md-4 " >
            <%= f.label :status %>
            <%= f.select :status, options_for_select(@statuses.collect { |s| [s[0].humanize, s[0]] }, selected: @account.status), {} , class: "form-control" %>
          </div>


          <div class="form-group col-md-6" >
            <%= f.label :street_address %>
            <%= f.text_field :street_address, class: "form-control" %>
          </div>

          <div class="form-group col-md-6" >
            <%= f.label :street_address_2 %>
            <%= f.text_field :street_address_2, class: "form-control" %>
          </div>

          <div class="form-group col-md-4" >
            <%= f.label :city %>
            <%= f.text_field :city, class: "form-control" %>
          </div>

          <div class="form-group col-md-4" >
            <%= f.label :state %>
            <%= f.text_field :state, class: "form-control" %>
          </div>

          <div class="form-group col-md-4" >
            <%= f.label :zip_code %>
            <%= f.text_field :zip_code, class: "form-control" %>
          </div>

          <div class="form-group col-md-3" >
            <label>Cycle Date</label>
            <p><%= @account.cycle_date || 'Never' %></p>
          </div>

          <div class="form-group col-md-3" >
            <label>Last Requested</label>
            <p><%= @account.request_date || 'Never' %></p>
          </div>

          <div class="form-group col-md-6" >
            <%= f.label :weekly_request %>
            <%= f.check_box :weekly_request%>
          </div>

          <div class="form-group col-md-6" >
            <%= f.label :quarterly_request %>
            <%= f.check_box :quarterly_request%>
          </div>

          <div class="form-group col-md-4  col-md-offset-4" >
            <%= f.submit 'Update Account', class: 'btn btn-info' %>
          </div>

      <% end %>

      </div>

    </div>

  </div>
