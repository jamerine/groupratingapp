<%= content_tag_for :div, @note do %>
  <%= render partial: "shared/account_navbar", locals: { object: @account } %>
  <div class="container">

    <%= link_to 'Return to Account', account_path(@account.id), class: 'btn btn-default', style: 'margin-bottom: 15px;' %>

    <%= link_to 'Return to Notes', account_notes_path(@account), class: 'btn btn-default', style: 'margin-bottom: 15px;' %>

    <div class="jumbotron">
      <div class="row text-center">
        <h4>Add Note:</h4>
        <h2><%= @account.name.titleize %></h2>
        <h3>(Policy Number: <%= @account.policy_number_entered %>)</h3>
      </div>

      <div class="row">
        <%= render partial: 'form' %>
      </div>
    </div>
  </div>
<% end %>
