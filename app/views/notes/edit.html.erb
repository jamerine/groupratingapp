<%= content_tag_for :div, @note do %>
<%= render partial: "shared/account_navbar", locals: { object: @account } %>
  <div class="container">

    <%= link_to 'Return to Notes', account_notes_path(@account), class: 'btn btn-default' %>
    <div class="jumbotron">
      <div class="row text-center">
        <h4>Add Note:</h4>
        <h2><%= @account.name.titleize %></h2>
        <h3>(Policy Number: <%= @account.policy_number_entered %>)</h3>
      </div>

      <div class="row">
        <%= form_for [@account, @note] do |f| %>

          <div class="form-group col-md-2" >
            <%= f.label :category %>
            <%= f.select :category, options_for_select(@categories.collect { |s| [s[0].humanize.titleize, s[0]]}, selected: @note.category), {include_blank: "Choose Category"} , class: "form-control", required: true %>
          </div>

          <div class="form-group col-md-12" >
            <%= f.label :title %>
            <%= f.text_field :title, class: "form-control", required: true %>
          </div>

          <div class="form-group  col-md-12" >
            <%= f.label :description %>
            <%= f.trix_editor :description, required: true %>
          </div>

          <div class="form-group col-md-12">


              <% if @note.attachment_url %>
              <label>Current Attachment: <%= @note.attachment_identifier %></label>
              <% else %>
              <label>Attachment</label>
              <% end %>
            </label>
            <%= f.file_field :attachment %>
          </div>

          <div class="form-group col-md-4" >
            <%= f.submit 'Update Note', class: 'btn btn-info'  %>
          </div>

          <div class="form-group col-md-4 col-md-offset-4 text-right" >
            <%= link_to 'Delete', account_note_path(account_id: @note.account.id, id: @note.id), method: :delete, data: {:confirm => "Are you sure you want to delete the note?"}, class: 'btn btn-danger'  %>
          </div>

        <% end %>
      </div>
    </div>
  </div>
<% end %>
