<h3>Recent Notes - <%= link_to 'Add Note', new_account_note_path(account_id: @account.id), class: 'btn btn-success' %></h3>
  <% if notes.empty? %>
    <div class="container">
      <h5>No Notes have been added.</h5>
    </div>
  <% else %>

  <div class="panel panel-primary">
    <div class="panel-heading">
        <div class="row text-center">
          <div class="col col-sm-1">
          </div>
          <div class="col col-sm-2">
            <b>Category</b>
          </div>
          <div class="col col-sm-3">
            <b>Title</b>
          </div>
          <div class="col col-sm-3">
            <b>User</b>
          </div>
          <div class="col col-sm-3">
            <b>Created</b>
          </div>
        </div>
      </div>
  </div>

  <% @notes.each do |note| %>
    <%= render partial: 'notes/full_note', locals: { note: note } %>
  <% end %>
  <br>
  <div class="container">
    <div class="row text-center">
      <%= link_to 'View All Notes', account_notes_path(@account), class: 'btn btn-default' %>
    </div>
  </div>
  <% end %>
