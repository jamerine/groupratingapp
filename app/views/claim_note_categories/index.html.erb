<div class="container" style="margin-bottom: 100px;">
  <div class="jumbotron">
    <h1 class="text-center">Claim Note Categories</h1>
  </div>

  <div class="text-right" style="margin-bottom: 15px;">
    <%= link_to 'Back to Rates', rates_path, class: 'btn btn-danger' %>
  </div>

  <div class="row">
    <div class="col-md-12">
      <table class="table table-striped note-datatable">
        <thead>
          <tr>
            <th style="text-align: left;">Title</th>
            <th style="text-align: left;">Note</th>
            <th width="15%" style="text-align: right;"><%= link_to 'Add Category', new_claim_note_category_path, class: 'btn btn-success btn-sm' %></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td style="text-align: left;"><%= category.title %></td>
              <td style="text-align: left;"><%= category.note %></td>
              <td width="15%" style="text-align: right;">
                <%= link_to edit_claim_note_category_path(category), class: 'btn btn-primary btn-sm' do %>
                  <i class="fa fa-edit"></i>
                <% end %>
                <%= link_to claim_note_category_path(category), method: :delete, class: 'btn btn-danger btn-sm', style: 'margin-right: 8px;', input_html: { data: { confirm: 'Are you sure you want to delete this category?' } } do %>
                  <i class="fa fa-trash"></i>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<script>
  $(function () {
    $('.note-datatable').DataTable({
      order:      [[0, 'asc']],
      columnDefs: [{ targets: -1, orderable: false }]
    });
  });
</script>
