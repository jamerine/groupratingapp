<%= f.input :id, as: :hidden %>

<div class="row">
  <div class="col-sm-4">
    <%= f.input :policy_year, label: 'Policy Year' %>
  </div>
  <div class="col-sm-4">
    <%= f.input :manual_class_from, label: 'Manual Class From' %>
  </div>
  <div class="col-sm-4">
    <%= f.input :manual_class_to, label: 'Manual Class To' %>
  </div>
</div>

<div class="form-group" style="text-align: right;">
  <%= link_to 'Cancel', manual_classes_path, class: 'btn btn-danger' %>
  <%= f.submit 'Save', class: 'btn btn-success' %>
</div>